@using PLC_Simulation.Services.Enums;
@if (ComponentEnum == ComponentEnum.ParallelDown)
{
    <defs>
        <marker id="arrowhead" markerWidth="10" markerHeight="7"
            refX="0" refY="3.5" orient="auto">
            <polygon points="0 0, 10 3.5, 0 7" />
        </marker>
    </defs>
    <rect x="-20" width="100" height="100" fill="transparent" stroke="none" />
    <line x1="0" y1="90" stroke-width="3" stroke="black" />
    <line x1="0" x2="45" y1="88.5" y2="88.5" stroke="black" stroke-width="3" marker-end="url(#arrowhead)" />
}

@if (ComponentEnum == ComponentEnum.ParallelUp)
{
    <g transform="rotate(-90 30 50) translate(-10 0)">
        <defs>
            <marker id="arrowhead" markerWidth="10" markerHeight="7"
                refX="0" refY="3.5" orient="auto">
                <polygon points="0 0, 10 3.5, 0 7" />
            </marker>
        </defs>
        <rect x="-20" width="100" height="100" fill="transparent" stroke="none" />
        <line x1="0" y1="90" stroke-width="3" stroke="black" />
        <line x1="0" x2="45" y1="88.5" y2="88.5" stroke="black" stroke-width="3" marker-end="url(#arrowhead)" />
    </g>
}

@code {
    [Parameter]
    public ComponentEnum ComponentEnum { get; set; }
}
