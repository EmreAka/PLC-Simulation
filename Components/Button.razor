@if (IsOpen)
{
    <rect x="-20" width="100" height="100" fill="transparent" stroke="none" />
    <line y1="100" stroke-width="3" stroke="@Color" />
    <line y1="100" x2="60" x1="60" stroke-width="3" stroke="@Color"/>

}
@if (!IsOpen)
{
    <rect x="-20" width="100" height="100" fill="transparent" stroke="none" />
    <line y1="100" stroke-width="3" stroke="@Color" />
    <line y1="100" x2="60" x1="60" stroke-width="3" stroke="@Color" />
    <line x1="-20" x2="80" y1="90" y2="10" stroke-width="3" stroke="@Color"/>
}


@code {
    [Parameter]
    public bool IsOpen { get; set; }

    [Parameter]
    public bool Output { get; set; }

    private string Color { get { if (Output == true) { return "green"; } else { return "black"; } } }
}
